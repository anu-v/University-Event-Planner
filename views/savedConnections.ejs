<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ektara-MyConnections</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../assets/css/style.css">
</head>

<body class="savedConnections_body">
  <% include partials/header.ejs %>
   <% include partials/nav.ejs %>
    <div class="savedConnections_tble">
      <p><%= alert %></p>
        <table class="savedConnections_table">
            <tr>
                <th>Connection</th>
                <th>Category</th>
                <th>Going?</th>
                <th>Wanna change?</th>
            </tr>
            <tr>
            <% for(var i=0; i< data.userConnectionList.length ;i++) { %>
            <tr>
                <td><%= data.userConnectionList[i].Connection.connectionName %></td>
                <td><%= data.userConnectionList[i].Connection.connectionTopic %></td>
                <td><%= data.userConnectionList[i].rsvp %></td>
                <td>
                <form method="post" >
                <button class="button1" onclick="window.location.href='/connection?connectionID=<%= data.userConnectionList[i].Connection.connectionID %>'" type="button">Update</button>
                <button class="button2" formaction='/savedConnections?connectionID=<%= data.userConnectionList[i].Connection.connectionID%>'> Remove</button>
                <input type ="hidden" name ="action" value="delete"/>
                <td>
                </form>
          </tr>
          <% } %>
        </tr>
          </table>
    </div>
    <% include partials/footer.ejs %>
</body>
</html>
